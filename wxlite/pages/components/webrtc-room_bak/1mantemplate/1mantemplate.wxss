
.fadeImage{
  position: absolute;
  top: 0.5rem;
  left: 1rem;
  z-index: 9999;
  width: 50px;
  height: 50px;
  opacity: 0;
}

.fadeAction {
  animation: fade;/*动画名称*/
  animation-duration: 5s;/*动画持续时间*/
  -webkit-animation:fade 5s;/*针对webkit内核*/
}

@keyframes fade {
  0% {opacity: 0;}
  50% {opacity: 1;}
  100% {opacity: 0;}
}
@-webkit-keyframes fade {/*针对webkit内核*/
  0% {opacity: 0;}
  50% {opacity: 1;}
  100% {opacity: 0;}
}